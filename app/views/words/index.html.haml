%h1 Listing words
%table
  %tr
    %th Name
    %th
    %th
    %th
  - @words.each do |word|
    %tr
      %td= word.name
      %td= link_to 'Show', word
      %td= link_to 'Edit', edit_word_path(word)
      %td= link_to 'Destroy', word, :confirm => 'Are you sure?', :method => :delete
%br/
= link_to 'New Word', new_word_path

= page_entries_info @words
= will_paginate @words